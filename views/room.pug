extends layout

block content
  fieldset
    legend 채팅방 생성
    form(action='/room' method='post')
      div: input(name='title' placeholder='방 제목')
      div: input(name='max' type='number' placeholder='수용 인원(최소 2명)' min='2' value='10')
      div: input(name='password' type='password' placeholder='비밀번호(없으면 공개방)')
      div: input(name='nickname' placeholder='방생성자 : ')
      div: input(name='participant' placeholder='초대닉네임 : ')
      div: input(name='participant_member_icon_file_name' placeholder='초대아이콘파일네임 : ')
      div: button(type='submit') 생성
